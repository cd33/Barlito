{% extends "AppBundle::layout.html.twig" %}

{% block stylesheets %}
	{# {{ parent() }} #}
	<!-- Css Mano pour le login -->
	<link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/navbarcustom.css') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/util.css') }}" />
	<link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/main.css') }}" />
{% endblock %}

{% block navbar %}
	<div style="margin:20px;">
        <nav>
          <div class="navbarcustom" style="padding-left:100px">
            <a href="#!" class="brand-logo">Ma Banque En Ligne </a>
          </div>
        </nav>
    </div>
{% endblock %}

{% block body %}
	{% block fos_user_content %}

		{% trans_default_domain 'FOSUserBundle' %}
		{# %-- if error % #}
		    <div>{# { error.messageKey|trans(error.messageData, 'security') } #}</div>
		{# % endif % #}

		<div class="limiter">
			<div class="container-login100">
				<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
					<form action="{{ path("fos_user_security_check") }}" method="post" class="login100-form validate-form flex-sb flex-w">

						<span class="txt1 p-b-11">
							 <label for="email">{{ form_label(form.email) }}</label>
						</span>
						<div class="wrap-input100 validate-input m-b-36" data-validate = "Email is required">
							 {{ form_widget(form.email, { 'attr': { 'class': 'input100' } }) }}
							<span class="focus-input100"></span>
						</div>

						<span class="txt1 p-b-11">
							 <label for="username">{{ form_label(form.username) }}</label>
						</span>
						<div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">
							{{ form_widget(form.username, { 'attr': { 'class': 'input100' } }) }}
							<span class="focus-input100"></span>
						</div>

						<span class="txt1 p-b-11">
							 <label for="plainpasswordfirst">{{ form_label(form.plainPassword.first) }}</label>
						</span>
						<div class="wrap-input100 validate-input m-b-36" data-validate = "Password is required">
							{{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'input100' } }) }}
							<span class="focus-input100"></span>
						</div>

						<span class="txt1 p-b-11">
							 <label for="plainpasswordsecond">{{ form_label(form.plainPassword.second) }}</label>
						</span>
						<div class="wrap-input100 validate-input m-b-36" data-validate = "Confirm password is required">
							{{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'input100' } }) }}
							<span class="focus-input100"></span>
						</div>

						<div style="display: none">
							{{ form_rest(form)}}
						</div>
					    <div class="container-login100-form-btn">
					        <input class="login100-form-btn" type="submit" id="submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
					    </div>
					</form>
				</div>
			</div>
		</div>
		<div id="dropDownSelect1"></div>
	{% endblock fos_user_content %}
{% endblock %}

{% block javascripts %}
    <!-- Import js for login -->
    <script type="text/javascript" href="{{ asset('js/main.js') }}"></script>
{% endblock %}
